{% style %}
    .ttslideshow--{{ section.id }} .swiper-pagination-side {
     position: absolute;
        right: 30px;
        top: 50%;
        transform: translateY(-100%);
        display: flex;
        flex-direction: row;
        width: auto;
        justify-content: center;
    }

    .ttslideshow--{{ section.id }} .swiper-pagination-bullet {
        width: 13px;
        height: 13px;
      background: #000;
      opacity: 0.4;
    }

    .ttslideshow--{{ section.id }} .swiper-pagination-bullet-active {
      opacity: 1;
    }
        {% for block in section.blocks %}
        .slide--{{ block.id }} .main-slide{
          flex-direction: {% if block.settings.layout_direction == 'reverse' %}row-reverse{% else %}row{% endif %};
        }
          .slide--{{ block.id }} .sub-heading{
            color:{{ block.settings.subheading_color }};
          }
          .slide--{{ block.id }} .slide-heading{
            color:{{ block.settings.heading_color }};
          }
        .slide--{{ block.id }} .button {
            border-radius: {{ block.settings.btn_border_radius }}px;
            padding: 0 3px;
                 background-color: {{ block.settings.button_bg }};
              color: {{ block.settings.button_text }};
          }
                  .slide--{{ block.id }} .button::before {
              background-color: {{ block.settings.button_bg_hover }};
            }
             .slide--{{ block.id }} .button:Hover{
            color: {{ block.settings.button_text_hover }};
             }
           {% endfor %}
        @media screen and (max-width: 450px) {
        .tt-hero-slider .main-slide {
          flex-direction: column;
          gap: 4rem;
          margin: 6rem auto;
        }
      }
        .section-{{ section.id }}-padding {
           padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
           padding-bottom: {{ section.settings.padding_bottom | times: 0.30 | round: 0 }}px;
