        },
        {
          "type": "text",
          "id": "feature_text",
          "label": "Feature Text",
          "default": "24 / 7 Assistance"
        },
         {
      "type": "color",
      "id": "bg_color_box",
      "label": "Box Background Color",
      "default":"#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default":"#fff"
    }
    
      ]
    },
     {
      "type": "@app"
    }
  ],
"presets": [
  {
    "name": "Text Banner",
    "category": "Text",
    "settings": {
