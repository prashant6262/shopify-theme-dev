{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .contact-section {
    background: {{section.settings.bg_color}};
  }
  .contact-section p{
    color:{{section.settings.subtext_color}};
  }
  {% for block in section.blocks %}
  .contact-section .feature-item.block--{{ block.id }} {
    background: {{block.settings.bg_color_box}};
  }
  .block--{{ block.id }} span{
    color:{{block.settings.text_color}};
  } 
   {% endfor %}

</style>

<div class="contact-section center section-{{ section.id }}-padding page-width {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="">
    {% if section.settings.subtext != blank %}
      <p class="">{{ section.settings.subtext }}</p>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2 class="h1">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="feature-list">
      {% for block in section.blocks %}
         {% case block.type %}
          {% when 'feature' %}  
        <div class="feature-item block--{{ block.id }}">
          {% if block.settings.feature_icon != blank %}
            <img src="{{ block.settings.feature_icon | img_url: '30x30' }}" alt="Feature Icon" width="" height="">
            {% else %}
             {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {% endif %}
          {% if block.settings.feature_text != blank %}
            <span>{{ block.settings.feature_text }}</span>
          {% endif %}
        </div>
    {% when '@app' %}
      {% render block %}
  {% endcase %}
{% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Text Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "We’d love to hear from you."
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Here's what some of my satisfied clients have to say about my work."
    },
    {
          "type": "color",
          "id": "subtext_color",
          "label": "Subheading Color",
           "default":"#b38f64"
        },

     {
