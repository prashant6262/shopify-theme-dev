            <img
              src="{{ section.settings.banner2_img | img_url:"master" }}"
              alt="banner2"
              width=""
              height=""
              loading="lazy"
            >
          </a>

          <div class="banner-content banner-content2 {{ section.settings.text2_position }}">
            <div class="banner-inner">
              {% if section.settings.banner2_desc != blank %}
                <div class="desc">{{ section.settings.banner2_desc }}</div>
              {% endif %}
              {% if section.settings.banner2_title != blank %}
                <h2 class="title">{{ section.settings.banner2_title }}</h2>
              {% endif %}
              {% if section.settings.banner2_btn != blank %}
                <div>
                  <a href="{{ section.settings.banner2_btn_url }}" class="btn2 btn">
                    {{- section.settings.banner2_btn -}}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>

      <div class="subbanner-parent banner">
        <div class="banner-content banner-content3 content2 {{ section.settings.text3_position }}">
            
              {% if section.settings.banner3_img != blank %}
                <img
                  src="{{ section.settings.banner3_img | img_url:"master" }}"
                  alt="banner3"
                  width=""
                  height=""
                  loading="lazy"
                >
              {% endif %}
           
         
              {% if section.settings.banner3_desc != blank %}
                <div class="desc">{{ section.settings.banner3_desc }}</div>
              {% endif %}
              {% if section.settings.banner3_title != blank %}
                <h2 class="title">{{ section.settings.banner3_title }}</h2>
              {% endif %}

              {% if section.settings.banner3_btn != blank %}
                <div>
                  <a href="{{ section.settings.banner3_url }}" class="btn3 btn">{{ section.settings.banner3_btn }}</a>
                </div>
              {% endif %}
             
         </div>


        <div class="banner-con-4 col-sm-6 col-xs-6 shades-animation">
          {% if section.settings.banner4_img != blank %}
       
              <a
                class="banner-image image-animation"
                href="{% if section.settings.banner4_url != blank %}{{ section.settings.banner4_url }}{% else %}#{% endif %}"
              >
                <img
                  width=""
                  height=""
                  loading="lazy"
                  src="{{ section.settings.banner4_img | img_url:"master" }}"
                  alt="banner4"
                >
              </a>
           
            <div class="banner-content banner-content4 {{ section.settings.text4_position }}">
              <div class="banner-inner">
                {% if section.settings.banner4_desc != blank %}
                  <div class="desc">{{ section.settings.banner4_desc }}</div>
                {% endif %}
                {% if section.settings.banner4_title != blank %}
                  <h2 class="title">{{ section.settings.banner4_title }}</h2>
                {% endif %}

                <div>
                  {% if section.settings.banner4_btn != blank %}
                    <a href="{{ section.settings.banner4_btn_url }}" class="btn4 btn">
                      {{- section.settings.banner4_btn -}}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

