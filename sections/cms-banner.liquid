<div class="section-{{ section.id }}-padding main-cms-banner">
  <div class="cms-banner right-to-left">
    <div class="banner banner1 col-sm-6 col-xs-6 shades-animation">
      {% if section.settings.banner1_img != blank %}
        <a
          class="banner-image image-animation"
          href="{% if section.settings.banner1_url != blank %}{{ section.settings.banner1_url }}{% else %}#{% endif %}"
        >
          <img
            src="{{ section.settings.banner1_img | img_url:"master" }}"
            alt="banner1"
            width=""
            height=""
            loading="lazy"
          >
        </a>
        <div class="banner-content banner-content1 {{ section.settings.text1_position }}">
          <div class="banner-inner">
            {% if section.settings.banner1_desc != blank %}
              <div class="desc">{{ section.settings.banner1_desc }}</div>
            {% endif %}
            {% if section.settings.banner1_title != blank %}
              <h2 class="title">{{ section.settings.banner1_title }}</h2>
            {% endif %}
            {% if section.settings.banner1_btn != blank %}
              <div>
                <a href="{{ section.settings.banner1_btn_url }}" class="btn1 btn">{{ section.settings.banner1_btn }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>

    <div class="banner banner2 col-sm-6 col-xs-6">
      <div class="shades-animation content1 col-sm-12 col-xs-12">
        {% if section.settings.banner2_img != blank %}
          <a
            class="banner-image image-animation"
            href="{% if section.settings.banner2_url != blank %}{{ section.settings.banner2_url }}{% else %}#{% endif %}"
