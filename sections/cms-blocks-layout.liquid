
{%- style -%}
.section-{{ section.id }}-padding {
     padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
     padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
     overflow-x:clip;
   }

@media screen and (min-width: 768px) {
     .section-{{ section.id }}-padding {
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
     }
   }
{%- endstyle -%}


<div class="cms-blocks-layout custom-grid-{{ section.id }} section-{{ section.id }}-padding">
  <div class="grid-container">
    <div class="grid-item big-left">
      {% if section.settings.left_image != blank %}
        <div class="image-wrapper">
          <img
            src="{{ section.settings.left_image | img_url: 'master' }}"
            alt="left image"
            width=""
            height=""
            loading="lazy"
          >
          {% if section.settings.enable_play_btn %}
            <a class="youtube-popup">
              <button class="play-btn" id="playVideo">
                <svg
                  class="svg-inline--fa fa-play"
                  aria-hidden="true"
                  focusable="false"
                  width="25"
                  height="25"
                  data-prefix="fas"
                  data-icon="play"
                  role="img"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 384 512"
                  data-fa-i2svg=""
                >
                  <path fill="currentColor" d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"></path>
                </svg>
              </button>
            </a>

             <div id="videoPopup" class="video-popup" style="display: none;">
  <div class="video-inner-popup">
    <div class="video-popup-content">
      <span class="close-popup" aria-label="Close Popup" id="closePopup">
        <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x icon icon-close"><path d="M18 6 6 18M6 6l12 12"></path></svg>
      </span>

      <iframe
        id="youtubeFrame"
        width="100%"
        height="100%"
        src=""
        mute="false"
        frameborder="0"
        allow="autoplay; fullscreen"
        allowfullscreen
      ></iframe>

    </div>
  </div>
</div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <div class="main-text">
      <div class="inner-image-text">
        <div class="top-column center-top-img grid-item-common">
          <div class="grid-item center-top">
            {% if section.settings.center_subheading != blank %}
              <p class="sub-heading">{{ section.settings.center_subheading }}</p>
            {% endif %}

            {% if section.settings.center_heading != blank %}
              <h2 class="heading">{{ section.settings.center_heading }}</h2>
            {% endif %}

            {% if section.settings.center_btn_label != blank %}
              <a href="{{ section.settings.center_btn_link }}" class="btn button button--primary button-hover-style">
                {{- section.settings.center_btn_label -}}
              </a>
            {% endif %}
          </div>
        </div>

        <div class="grid-item right-top grid-item-common">
          {% if section.settings.right_top_image != blank %}
            <img
              src="{{ section.settings.right_top_image | img_url: 'master'}}"
              alt="right top image"
              width=""
              height=""
              loading="lazy"
            >
          {% endif %}
        </div>
      </div>

      <div class="bottom-column">
        <div class="grid-item center-bottom grid-item-common">
          {% if section.settings.center_bottom_image != blank %}
            <img
              src="{{ section.settings.center_bottom_image | img_url: 'master'}}"
              alt="bottom center"
              width=""
              height=""
              loading="lazy"
            >
          {% endif %}
        </div>

        <div class="center-top-img grid-item-common">
          <div class="center-top grid-item right-bottom">
            {% if section.settings.right_subheading != blank %}
              <p class="sub-heading">{{ section.settings.right_subheading }}</p>
            {% endif %}

            {% if section.settings.right_heading != blank %}
              <h2 class="heading">{{ section.settings.right_heading }}</h2>
            {% endif %}

            {% if section.settings.right_btn_label != blank %}
              <a href="{{ section.settings.right_btn_link }}" class="btn button button--primary button-hover-style">
                {{- section.settings.right_btn_label -}}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const playBtn = document.getElementById('playVideo');
  const popup = document.getElementById('videoPopup');
  const closeBtn = document.getElementById('closePopup');
  const frame = document.getElementById('youtubeFrame');

  const ytUrl = "{{ section.settings.video_url }}";

  function convertToEmbed(url) {
    return url
      .replace("watch?v=", "embed/") +
      "?autoplay=1&mute=1";  
  }

  playBtn.addEventListener('click', function () {
    popup.style.display = 'flex';
    frame.src = convertToEmbed(ytUrl);
  });

  closeBtn.addEventListener('click', function () {
    frame.src = "";
    popup.style.display = 'none';
  });
});
</script>


{% schema %}
{
  "name": "CMS Blocks Layout",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left large image"
    },
    {
      "type": "checkbox",
      "id": "enable_play_btn",
      "label": "Enable play button"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "t:sections.video.settings.video_url.label",
      "info": "t:sections.video.settings.video_url.info"
    },
    {
      "type": "text",
      "id": "center_subheading",
      "label": "Center subheading"
    },
    {
      "type": "text",
      "id": "center_heading",
      "label": "Center heading"
    },
    {
      "type": "text",
      "id": "center_btn_label",
      "label": "Center button label"
    },
    {
      "type": "url",
      "id": "center_btn_link",
      "label": "Center button link"
    },
    {
      "type": "image_picker",
      "id": "right_top_image",
      "label": "Right top image"
    },
    {
      "type": "image_picker",
      "id": "center_bottom_image",
      "label": "Center bottom image"
    },
    {
      "type": "text",
      "id": "right_subheading",
      "label": "Right subheading"
    },
    {
      "type": "text",
      "id": "right_heading",
      "label": "Right heading"
    },
    {
      "type": "text",
      "id": "right_btn_label",
      "label": "Right button label"
    },
    {
      "type": "url",
      "id": "right_btn_link",
      "label": "Right button link"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "CMS Blocks Layout"
    }
  ]
}
{% endschema %}
