    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
"presets": [
  {
    "name": "Hero Countdown Banner",
    "category": "Hero",
    "settings": {
      "collection_label": "LIMITED OFFER",
      "heading": "Hand Craft the\nSpirit & Passion",
      "content_alignment": "center",
      "end_date": "2028-12-31 23:59:59",
      "text_color": "#ffffff",
      "heading_color": "#ffffff",
      "color": "#ffffff",
      "button_label": "Shop Now",
      "btn_border_radius": 50,
      "button_bg": "#000000",
      "button_text": "#ffffff",
      "button_bg_hover": "#ffffff",
      "button_text_hover": "#000000"
    }
  }
]

}
