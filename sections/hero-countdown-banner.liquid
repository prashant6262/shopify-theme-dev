      "label": "Button link"
    },
     {
        "type": "range",
        "id": "btn_border_radius",
        "label": "Banner Button Radius",
        "min": 0,
        "max": 50,
        "step": 2,
        "default": 50,
        "unit": "px"
    },
    {
        "type": "color",
        "id": "button_bg",
        "label": "Button background color",
        "default": "#000000"
    },
    {
        "type": "color",
        "id": "button_text",
