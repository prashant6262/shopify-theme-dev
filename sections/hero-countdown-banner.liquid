{%- style -%}
    .hero-countdown__bg {
        background-image: url({{ section.settings.background_image | image_url: width: 2000 }});
        background-size: cover;
        z-index: 1;
        display: flex !important;
        background-position: bottom;
        background-attachment: fixed;
    }
    .section-{{ section.id }}-padding .hero-countdown__label{
        color: {{ section.settings.text_color }};
        margin:0;
    }
    .section-{{ section.id }}-padding .countdown-item h1, .section-{{ section.id }}-padding .countdown-item p, 
    .section-{{ section.id }}-padding .countdown-box span{
        color: {{ section.settings.color }};
    }
    .section-{{ section.id }}-padding .hero-countdown__content {
        text-align: {{ section.settings.content_alignment }};
    }
    .section-{{ section.id }}-padding .hero-countdown__heading{
        color: {{ section.settings.heading_color }};
    }

    .section-{{ section.id }}-padding .button {
        border-radius: {{ section.settings.btn_border_radius }}px;
             background-color: {{ section.settings.button_bg }};
          color: {{ section.settings.button_text }};
      }
              .section-{{ section.id }}-padding .button::before {
          background-color: {{ section.settings.button_bg_hover }};
        }
         .section-{{ section.id }}-padding .button:Hover{
        color: {{ section.settings.button_text_hover }};
         }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}


<section class="section-{{ section.id }}-padding" data-aos="{{ settings.aos_effect }}">

  <div class="hero-countdown">
  <div class="hero-countdown__bg"></div>
  <div class="hero-countdown__overlay"></div>

  <div class="hero-countdown__content">
    {% if section.settings.collection_label != blank %}
      <p class="hero-countdown__label">
        {{ section.settings.collection_label }}
      </p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h1 class="hero-countdown__heading">
        {{ section.settings.heading | newline_to_br }}
      </h1>
    {% endif %}

    <div class="countdown-box" id="countdown1">
          <div class="countdown-item">
            <h1 id="days">00</h1>
            <p>{{ 'general.countdown-timer.days' | t }}</p>
          </div>
          <span>:</span>
          <div class="countdown-item">
            <h1 id="hours">00</h1>
            <p>{{ 'general.countdown-timer.hours' | t }}</p>
          </div>
          <span>:</span>
          <div class="countdown-item">
            <h1 id="minutes">00</h1>
            <p>{{ 'general.countdown-timer.min' | t }}</p>
          </div>
          <span>:</span>
          <div class="countdown-item">
            <h1 id="seconds">00</h1>
            <p>{{ 'general.countdown-timer.sec' | t }}</p>
          </div>
        </div>

    {% if section.settings.button_label != blank %}
      <div>
        <a href="{{ section.settings.button_link }}" class="button button-hover-style">
          {{ section.settings.button_label }}
        </a>
      </div>
    {% endif %}
  </div>
  </div>

</section>

<script>
  function startCountdown(endTime) {
    function updateTimer() {
      let now = new Date().getTime();
      let timeLeft = new Date(endTime).getTime() - now;

      if (timeLeft > 0) {
        let days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        let hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        let minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        let seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        document.getElementById('days').innerText = days;
        document.getElementById('hours').innerText = hours;
        document.getElementById('minutes').innerText = minutes;
        document.getElementById('seconds').innerText = seconds;
      } else {
        document.getElementById('countdown1').innerHTML = '<p>Offer Expired!</p>';
      }
    }
    setInterval(updateTimer, 1000);
  }

  document.addEventListener('DOMContentLoaded', function () {
    let countdownEndDate = '{{ section.settings.end_date }}';
    startCountdown(countdownEndDate);
  });
</script>

{% schema %}
{
  "name": "Hero Countdown Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "collection_label",
      "label": "Top label",
