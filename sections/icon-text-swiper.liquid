
{%- style -%}
   .section-{{ section.id }}-padding {
     padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
     padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
     overflow-x:clip;
   }

   @media screen and (min-width: 768px) {
     .section-{{ section.id }}-padding {
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
     }
   }
{%- endstyle -%}

<div class="icon-text-swiper section-{{ section.id }}-padding" data-aos="{{ settings.aos_effect }}">
<div class="container">
  <div class="swiper icon-text-swiper-{{ section.id }}">
    <div class="swiper-wrapper">
     {% for block in section.blocks %}
  {% case block.type %}
            {%when 'item' %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="icon-text-item {{ section.settings.text_alignment }}">
            {% if block.settings.icon_image != blank %}
              <div class="icon-text-icon">
                <img src="{{ block.settings.icon_image | img_url: "master" }}" alt="icon image" width="" height="" loading="lazy">
              </div>
                {% else %}
               {{ 'collection-3' | placeholder_svg_tag }}
            {% endif %}

            <div class="icon-text-content">
              {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
              {% endif %}
               {% if block.settings.subtitle != blank %}
              <p>{{ block.settings.subtitle }}</p>
              {% endif %}
            </div>
          </div>
        </div>
         {% when '@app' %}
      {% render block %}
  {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  new Swiper(".icon-text-swiper-{{ section.id }}", {
    slidesPerView: 4,
    spaceBetween: 24,
    loop: {{ section.settings.enable_loop | json }},
    speed: {{ section.settings.autoplay_speed | default: 500 }},

    {% if section.settings.enable_autoplay %}
    autoplay: {
      delay: {{ section.settings.autoplay_delay }},
      disableOnInteraction: false,
      pauseOnMouseEnter: true
    },
    {% endif %}

    breakpoints: {
      100: {
        slidesPerView: 1
      },
      640: {
        slidesPerView: 2
      },
      1024: {
        slidesPerView: 3
      },
      1200: {
        slidesPerView: 4
      }
    }
  });
});
</script>


{% schema %}
{
  "name": "Icon Text Swiper",
  "settings": [
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ]
    },
     {
      "type": "header",
      "content": "slider"
    },
    {
        "type": "checkbox",
        "id": "enable_autoplay",
        "label": "Enable autoplay",
        "default": true
      },
      {
        "type": "range",
        "id": "autoplay_delay",
        "label": "Autoplay delay (ms)",
        "min": 1000,
        "max": 8000,
        "step": 500,
        "default": 3000
      },
      {
        "type": "range",
        "id": "autoplay_speed",
        "label": "Slide transition speed (ms)",
        "min": 200,
        "max": 2000,
        "step": 100,
        "default": 600
      },
      {
        "type": "checkbox",
        "id": "enable_loop",
        "label": "Enable loop",
        "default": true
      },  

     {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Icon Text Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image (optional)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Free Shipping for orders over Â£130"
        }
      ]
    },
      {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Icon Text Swiper",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}
