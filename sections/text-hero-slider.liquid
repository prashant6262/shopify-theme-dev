{%- style -%}
   .section-{{ section.id }}-padding {
     padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
     padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
     overflow-x:clip;
   }

  {% for block in section.blocks %}
   .custo-{{ block.id }} .hero-content h1{
      color:{{block.settings.heading_color}};
   }
   .custo-{{ block.id }} .hero-content h3{
      color:{{block.settings.text_color}};
   }
   {%endfor %}

   .hero-zoom-img {
      animation: heroZoomIn {{ section.settings.zoom_speed }}s ease-out forwards;
   }
   @keyframes heroZoomIn {
  from {
    transform: scale(1);
  }
  to {
    transform: scale(1.12);
  }
}


   @media screen and (min-width: 768px) {
     .section-{{ section.id }}-padding {
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
     }
   }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="hero-slider">
    <div class="swiper hero-slider--{{ section.id }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide custo-{{ block.id }}">
            <div class="hero-slide-wrapper">

            {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | img_url: 'master' }}"
                  alt="{{ block.settings.title }}"
                  loading="lazy"
                  width=""
                  height=""
                   class="hero-zoom-img"
                >
              {% endif %}
                
              <div class="text-animate">
                <div class="hero-content">
                  {% if block.settings.subtitle %}
                    <h3>{{ block.settings.subtitle }}</h3>
                  {% endif %}
                  {% if block.settings.title %}
                    <h1>{{ block.settings.title }}</h1>
                  {% endif %}
                  {% if block.settings.button_label %}
                    <div>
                      <a
                        href="{{ block.settings.button_link }}"
                        class="button button--secondary button-hover-style hero-btn"
                      >
                        {{ block.settings.button_label }}
                      </a>
                    </div>
                  {% endif %}
                </div>
                </div>

            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination hero-pagination"></div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const swiper = new Swiper(".hero-slider--{{ section.id }}", {
    slidesPerView: 1,
    loop: {{ section.settings.enable_loop | json }},
     {% if section.settings.enable_autoplay %}
    autoplay: {
      delay: {{ section.settings.autoplay_delay }},
      disableOnInteraction: false
    },
    {% else %}
    autoplay: false,
    {% endif %} 
    pagination: {
      el: ".hero-pagination",
      clickable: true
    },
    on: {
      slideChangeTransitionStart: function () {
        document.querySelectorAll(".text-animate").forEach(el => {
          el.classList.remove("active");
        });
      },
      slideChangeTransitionEnd: function () {
        let activeSlide = document.querySelector(
          ".swiper-slide-active .text-animate"
        );
        if (activeSlide) {
          activeSlide.classList.add("active");
        }
      }
    }
  });

  setTimeout(() => {
    let firstSlide = document.querySelector(".swiper-slide-active .text-animate");
    if (firstSlide) firstSlide.classList.add("active");
  }, 300);
});

document.querySelectorAll('.swiper-slide').forEach(slide => {
  slide.addEventListener('mousemove', (e) => {
    const imgs = slide.querySelectorAll('.hero-img');
    const rect = slide.getBoundingClientRect();
    const x = e.clientX - rect.left; 
    const y = e.clientY - rect.top;

    imgs.forEach(img => {
      const speed = 16; 
      const moveX = (x - rect.width / 2) / speed;
      const moveY = (y - rect.height / 2) / speed;

      img.style.transform = `translate(${moveX}px, ${moveY}px)`;
    });
  });

  slide.addEventListener('mouseleave', () => {
    const imgs = slide.querySelectorAll('.hero-img');
    imgs.forEach(img => {
      img.style.transform = `translate(0, 0)`;
    });
  });
});

</script>

