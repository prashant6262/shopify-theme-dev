{% assign item_count = cart.item_count %}

 <a href="{{ routes.cart_url }}" class="{{ section.settings.header_icon_style }} header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
  {% if cart.item_count == 0 %}
    <span class="" title="Cart Empty">{{ 'icon-cart-empty.svg' | inline_asset_content }}</span>
  {% else %}
    <span class="" title="Icon Cart">{{ 'icon-cart.svg' | inline_asset_content }}</span>
  {% endif %}

<div class="cart-count">
  <div class="count">{{ item_count }}</div>
  <div class="label">
    {% if item_count == 1 %}
      {{ 'sections.header.cart_count.one' | t: count: item_count | split: ')' | last | strip }}
    {% else %}
      {{ 'sections.header.cart_count.other' | t: count: item_count | split: ')' | last | strip }}
    {% endif %}
  </div>
</div>
</a>
