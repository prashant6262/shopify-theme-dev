{% style %}

    .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
            padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
          }
          {% for block in section.blocks %}
          .card--{{ block.id }} p,  .card--{{ block.id }} h2,  .card--{{ block.id }} a{
 color:{{ block.settings.common_color }};
          }
           {% endfor %}
            
           @media screen and (min-width: 750px) {
            .section-{{ section.id }}-padding {
              padding-top: {{ section.settings.padding_top }}px;
              padding-bottom: {{ section.settings.padding_bottom }}px;
            }
          }
{% endstyle %}


<div class="section-{{ section.id }}-padding" data-aos="{{ settings.aos_effect }}">
    <div class="page-width">
<div class="featured-cards-wrapper">
  {% for block in section.blocks %}
    <div class="featured-card card--{{ block.id }} custom-hover image-animation">
      {% if block.settings.image != blank %}
        <a href="{{ block.settings.image_url }}" class="banner-image">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="" width="" height="" loading="lazy">
        </a>
      {% endif %}

      <div class="featured-card-content" style="text-align: {{ section.settings.text_alignment }};">
        {% if block.settings.label != blank %}
          <p class="label">{{ block.settings.label }}</p>
        {% endif %}

        {% if block.settings.title != blank %}
          <h2>{{ block.settings.title }}</h2>
        {% endif %}

        {% if block.settings.button_label != blank %}
            <div>
          <a class="button-text" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a>
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
</div>
</div>


{% schema %}
{
  "name": "Featured Cards 3-Column",
  "settings": [
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
     {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
         {
          "type": "color",
          "id": "common_color",
          "label": "Common Color",
          "default": "#34373F"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Image",
          "info": "Image size "
        },
         {
          "type": "url",
          "id": "image_url",
          "label": "Image URL"
        },
        
        {
          "type": "text",
          "id": "label",
          "label": "Top Label"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "Main Title"
        },

        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Featured Cards 3-Column",
      "category": "Custom"
    }
  ]
}
{% endschema %}
