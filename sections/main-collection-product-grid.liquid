<script>
  // collection page Tag based filter

  document.querySelectorAll('.advanced-filters .advanced-filter').forEach(function (filterEl) {
  filterEl.addEventListener('click', function (e) {
    e.preventDefault();

    const link = filterEl.querySelector('a');
    if (!link) return;

    const currentTag = link.textContent.trim();
    filterEl.parentElement.querySelectorAll('.advanced-filter').forEach(function (sibling) {
      sibling.classList.remove('active-filter');
    });
    filterEl.classList.add('active-filter');

    const tagURL = link.getAttribute('href');
    if (!tagURL) return;

    fetch(tagURL)
      .then(response => response.text())
      .then(responseHTML => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(responseHTML, 'text/html');
        const getProducts = doc.querySelector('.grid--uniform')?.innerHTML;

        if (getProducts) {
          setTimeout(function () {
            window.history.replaceState({}, '', tagURL);

            const grid = document.querySelector('.grid--uniform');
            if (grid) {
              grid.innerHTML = ''; // clear old items
              grid.insertAdjacentHTML('beforeend', getProducts);
            }
          }, 200);
        }
      })
      .catch(err => console.error('Error loading products:', err));
  });
});

</script>

<div class="section-{{ section.id }}-padding main-collection-product gradient color-{{ section.settings.color_scheme }}">
  {% if section.settings.show_tabs %}
    <div class="page-width">
      <div class="custom_range_filter">
        <div class="tags-title">
          <h2 class="text-body tag-title" id="verticalTitle" tabindex="-1">
            {{ 'products.facets.tags' | t }}
          </h2>
          </div>
        <div class="tags-list">
          <ul class="advanced-filters">
            {% for tag in collection.all_tags %}
              {%- assign new_url = tag | link_to_tag: tag | split: 'href="' | last | split: '"' | first -%}
              <li class="advanced-filter {% if current_tags contains tag %}active-filter{% endif %}">
                <a href="{{ new_url }}">{{ tag }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  {% endif %}

  {%- paginate collection.products by section.settings.products_per_page -%}
    {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
    {% assign filter_type = section.settings.filter_type %}

    {% if section.settings.enable_sorting %}
      {% if filter_type == 'un-group' or filter_type == 'vertical' %}
        <facet-filters-form class="facets facets-vertical-sort page-width">
          <form class="facets-vertical-form" id="FacetSortForm">
            <div class="collection-view-toggle">
              <!-- Grid View -->
              <button class="view-btn grid-view active" title="Grid View">
                <svg width="24" height="24" viewBox="0 0 24 24">
                  <rect x="3" y="3" width="7" height="7"/>
                  <rect x="14" y="3" width="7" height="7"/>
                  <rect x="14" y="14" width="7" height="7"/>
                  <rect x="3" y="14" width="7" height="7"/>
                </svg>
              </button>

              <!-- Grid View 2 -->
              <button class="view-btn grid-view2 small-hide" title="Grid View 2">
                <svg width="24" height="24" viewBox="0 0 24 24">
                  <rect x="2" y="2" width="9" height="9"/>
                  <rect x="13" y="2" width="9" height="9"/>
                  <rect x="2" y="13" width="9" height="9"/>
                  <rect x="13" y="13" width="9" height="9"/>
                </svg>
              </button>

              <!-- List View -->
              <button class="view-btn list-view" title="List View">
                <svg
                  xmlns="https://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  class="injected-svg"
                  data-src="https://cdn.hugeicons.com/icons/left-to-right-list-bullet-stroke-rounded.svg?v=2.0"
                  xmlns:xlink="https://www.w3.org/1999/xlink"
                  role="img"
                  color="#000000"
                >
                  <path d="M8 5L20 5" stroke="#000000" stroke-width="1.5" stroke-linecap="round"></path>
                  <path d="M4 5H4.00898" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                  <path d="M4 12H4.00898" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                  <path d="M4 19H4.00898" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                  <path d="M8 12L20 12" stroke="#000000" stroke-width="1.5" stroke-linecap="round"></path>
                  <path d="M8 19L20 19" stroke="#000000" stroke-width="1.5" stroke-linecap="round"></path>
                </svg>
              </button>

              <!-- Short List View -->
              <button class="view-btn small-hide short-list-view" title="Short List View">
                <svg width="24" height="24" viewBox="0 0 24 24">
                  <rect x="3" y="5" width="18" height="2"/>
                  <rect x="3" y="11" width="18" height="2"/>
                  <rect x="3" y="17" width="18" height="2"/>
                </svg>
              </button>
            </div>

            <div class="product-count-vertical light small-hide" role="status">
              <h2 class="product-count__text text-body">
                <span id="ProductCountDesktop">
                  {%- if collection.results_count -%}
                    {{
                      'templates.search.results_with_count'
                      | t: terms: collection.terms, count: collection.results_count
                    }}
                  {%- elsif collection.products_count == collection.all_products_count -%}
                    {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                  {%- else -%}
                    {{
                      'products.facets.product_count'
                      | t: product_count: collection.products_count, count: collection.all_products_count
                    }}
                  {%- endif -%}
                </span>
              </h2>
              {%- render 'loading-spinner' -%}
            </div>

            <div class="facet-filters sorting caption small-hide">
