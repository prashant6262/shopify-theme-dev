{%- style -%}
  .section-{{ section.id }} {
    background: {{ section.settings.bg_color }};
  }
      .section-{{ section.id }} .swiper-button-prev:after, .section-{{ section.id }} .swiper-button-next:after{
        color:{{ section.settings.navigation_color }};
    }
   {% for block in section.blocks %}
    .hero-split--{{ block.id }} .hero-label {
        color: {{ block.settings.label_color }};
    }
    .hero-split--{{ block.id }} .hero-heading {
        color: {{ block.settings.heading_color }};
    }

     .hero-split--{{ block.id }} .button {
        border-radius: {{ block.settings.btn_border_radius }}px;
        padding: 0 3px;
             background-color: {{ block.settings.button_bg }};
          color: {{ block.settings.button_text_color }};
      }
              .hero-split--{{ block.id }} .button::before {
          background-color: {{ block.settings.button_bg_hover }};
        }
         .hero-split--{{ block.id }} .button:Hover{
        color: {{ block.settings.button_text_hover }};
         }
    {% endfor %}
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      }

  @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }
{%- endstyle -%}

<section class="section-{{ section.id }}-padding" data-aos="fade-up">
  <div class="hero-split-swiper section-{{ section.id }}">
    <div class="{{ section.settings.container_site }}">
      <div class="swiper {{ section.id }}--hero-split-slider">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide hero-split--{{ block.id }}" {{ block.shopify_attributes }}>
              <div class="hero-wrapper {{ block.settings.layout_direction }}">
                <div class="hero-content {{ block.settings.text_alignment }}">
                  {% if block.settings.label != blank %}
                    <div class="hero-label">{{ block.settings.label }}</div>
                  {% endif %}

                  {% if block.settings.heading != blank %}
                    <h2 class="hero-heading">{{ block.settings.heading }}</h2>
                  {% endif %}

                  {% if block.settings.button_text != blank %}
                    <div>
                    <a href="{{ block.settings.button_link }}" class="button button-hover-style">
                      {{ block.settings.button_text }}
                    </a>
                    </div>
                  {% endif %}
                  
                </div>

                <div class="hero-image">
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | img_url:"master" }}"
                      alt="{{ block.settings.heading }}"
                      width=""
                      height=""
                      loading="lazy"
                    >
                    {% else %}
                    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
       
    
      </div>
    </div>
     {% if section.settings.show_navigation %}
        <div class="swiper-button-prev hero-split-slider-prev-{{ section.id }}"></div>
        <div class="swiper-button-next hero-split-slider-next-{{ section.id }}"></div>
        {% endif %}
  </div>
</section>


<script>
document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.{{ section.id }}--hero-split-slider', {
    slidesPerView: 1,
    loop: true,
    speed: {{ section.settings.slider_speed }},
    navigation: {{ section.settings.show_navigation | json }} ? {
      nextEl: '.hero-split-slider-next-{{ section.id }}',
      prevEl: '.hero-split-slider-prev-{{ section.id }}'
    } : false,
      autoplay: {{ section.settings.enable_autoplay | json }} ? {
      delay: {{ section.settings.autoplay_delay }},
      disableOnInteraction: false,
      pauseOnMouseEnter: true
    } : false
  });
});

</script>

